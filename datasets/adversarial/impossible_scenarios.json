{
  "purpose": "Test cases designed to break the agent and detect hallucinations",
  "scenarios": [
    {
      "description": "Agent should reject HYPERSOFT (doesn't exist post-2019)",
      "driver": "VER",
      "expected_behavior": {
        "error_type": "invalid_compound",
        "fallback_allowed": false,
        "should_reject": true
      },
      "id": "adv_fictional_compound",
      "lap": 25,
      "name": "Fictional Tire Compound Test",
      "position": 2,
      "tires": {
        "age_laps": 15,
        "compound": "HYPERSOFT"
      },
      "weather": {
        "air_temp": 22,
        "condition": "dry",
        "track_temp": 30
      }
    },
    {
      "description": "Impossible tire age should be rejected",
      "driver": "HAM",
      "expected_behavior": {
        "error_type": "invalid_tire_age",
        "fallback_allowed": false,
        "should_reject": true
      },
      "id": "adv_negative_tire_age",
      "lap": 30,
      "name": "Negative Tire Age Test",
      "position": 3,
      "tires": {
        "age_laps": -5,
        "compound": "MEDIUM"
      },
      "weather": {
        "air_temp": 20,
        "condition": "dry",
        "track_temp": 28
      }
    },
    {
      "description": "Tires can't be 150 laps old in a 52-lap race",
      "driver": "LEC",
      "expected_behavior": {
        "error_type": "tire_age_exceeds_race_laps",
        "fallback_allowed": false,
        "should_reject": true
      },
      "id": "adv_impossible_tire_age",
      "lap": 40,
      "name": "Impossibly Old Tires Test",
      "position": 4,
      "tires": {
        "age_laps": 150,
        "compound": "HARD"
      },
      "weather": {
        "air_temp": 24,
        "condition": "dry",
        "track_temp": 32
      }
    },
    {
      "description": "Can't be on lap 99 of a 52-lap race",
      "driver": "NOR",
      "expected_behavior": {
        "error_type": "lap_exceeds_race_distance",
        "fallback_allowed": false,
        "should_reject": true
      },
      "id": "adv_future_lap",
      "lap": 99,
      "name": "Future Lap Number Test",
      "position": 1,
      "tires": {
        "age_laps": 10,
        "compound": "SOFT"
      },
      "weather": {
        "air_temp": 22,
        "condition": "dry",
        "track_temp": 30
      }
    },
    {
      "description": "Weather says 'dry' but has 'heavy_rain' in description",
      "driver": "PER",
      "expected_behavior": {
        "confidence_penalty": 0.3,
        "should_flag": true,
        "warning_type": "contradictory_weather"
      },
      "id": "adv_contradictory_weather",
      "lap": 35,
      "name": "Contradictory Weather Data",
      "position": 5,
      "tires": {
        "age_laps": 8,
        "compound": "INTERMEDIATE"
      },
      "weather": {
        "air_temp": 15,
        "condition": "dry",
        "description": "Heavy rain reported in all sectors",
        "track_temp": 18
      }
    },
    {
      "description": "Should strongly recommend change from slicks in heavy rain",
      "driver": "RUS",
      "expected_behavior": {
        "confidence_minimum": 0.95,
        "must_recommend": "BOX",
        "must_recommend_compound": [
          "INTERMEDIATE",
          "WET"
        ],
        "risk_level": "HIGH"
      },
      "id": "adv_slicks_in_monsoon",
      "lap": 20,
      "name": "Slicks in Heavy Rain Test",
      "position": 6,
      "tires": {
        "age_laps": 5,
        "compound": "SOFT"
      },
      "weather": {
        "air_temp": 10,
        "condition": "heavy_rain",
        "rainfall": true,
        "track_temp": 12
      }
    },
    {
      "description": "WET tires overheat on dry track - should recommend change",
      "driver": "SAI",
      "expected_behavior": {
        "confidence_minimum": 0.9,
        "must_recommend": "BOX",
        "must_recommend_compound": [
          "SOFT",
          "MEDIUM",
          "HARD"
        ]
      },
      "id": "adv_wets_on_dry_track",
      "lap": 15,
      "name": "Full Wets on Dry Track Test",
      "position": 7,
      "tires": {
        "age_laps": 3,
        "compound": "WET"
      },
      "weather": {
        "air_temp": 26,
        "condition": "dry",
        "track_temp": 35
      }
    }
  ],
  "test_suite": "adversarial_hallucination_tests"
}
